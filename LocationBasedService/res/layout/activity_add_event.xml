<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin" 
    	android:background="@drawable/index">
    	
        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >
           
            <EditText android:id="@+id/eventAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/eventName"
                android:singleLine="true" />
            
            <EditText android:id="@+id/eventCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/categoryName"
                android:singleLine="true" />
            
            
            
            <EditText android:id="@+id/cityEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/cityName"
                android:singleLine="true" />
            
            <EditText android:id="@+id/streetEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/streetName"
                android:singleLine="true" />

            <EditText android:id="@+id/stateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="State Name"
                android:singleLine="true" />
            
            <EditText android:id="@+id/zipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/zipcodeCity"
                android:inputType="number"
                android:singleLine="true" />
            
            <EditText
            android:id="@+id/startDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/startDetail"
            android:inputType="date"
            android:onClick="showDatePickerDialog" >
            </EditText>
            
             <EditText
            android:id="@+id/endDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/endDetail"
            android:inputType="date"
            android:onClick="showDatePickerDialog1" >
            </EditText>
            
           <!--  
            <EditText android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:inputType="date"
                android:hint="@string/startDetail"
                android:singleLine="true" />

            <EditText android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="10"
                android:inputType="date"
                android:hint="@string/endDetail"
                android:singleLine="true" />
            -->
            <Button
                android:id="@+id/addEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/AddEvent" />
        </LinearLayout>
</ScrollView>
    